<%=  notice %>
<h1 class="books-heading">Books</h1>

<table>
  <tr>
    <td>Title</td>
    <td>Body</td>
    <td>s</td>
    <td>e</td>
    <td>d</td>
  </tr>
  <% if @books.present? %>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  <% end %>
</table>

<h2 class="new-book">New book</h2>

<% if @book.errors.any? %>
    <div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model:@book, local: true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>