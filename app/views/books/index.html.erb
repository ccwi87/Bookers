<p class="notice"><%=  notice %></p>
<h1 class="books-heading">Books</h1>

<table>
  <tr>
    <td class="table">Title</td>
    <td class="table">Body</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>

<h2 class="new-book">New book</h2>

<% if @book.errors.any? %>
    <div>
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model:@book, local: true do |f| %>
    <p>title</p>
    <%= f.text_field :title %>

    <p>body</p>
    <%= f.text_area :body %>

    <p><%= f.submit 'Create Book' %></p>

<% end %>